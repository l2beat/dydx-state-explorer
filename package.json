{
  "name": "dydx-state-explorer",
  "private": true,
  "license": "MIT",
  "engines": {
    "node": "^14.0.0",
    "yarn": ">=1.22.0"
  },
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "scripts": {
    "format": "wsrun -ecsm format",
    "format:fix": "wsrun -ecsm format:fix",
    "lint": "wsrun -ecsm lint",
