    "@typescript-eslint/parser": "^5.6.0",
    "chai": "^4.3.4",
    "chai-as-promised": "^7.1.1",
    "esbuild": "^0.14.2",
    "esbuild-register": "^3.2.0",
    "eslint": "^8.4.1",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "mocha": "^9.1.3",
    "prettier": "^2.5.1",
    "typescript": "^4.5.2",
    "wsrun": "^5.2.4"
